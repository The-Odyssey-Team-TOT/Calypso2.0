<h2>Sign up</h2>

<%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :email,
                required: true,
                autofocus: true,
                input_html: { autocomplete: "email" }%>
    <%= f.input :password,
                required: true,
                hint: ("#{@minimum_password_length} characters minimum" if @minimum_password_length),
                input_html: { autocomplete: "new-password" } %>
    <%= f.input :password_confirmation,
                required: true,
                input_html: { autocomplete: "new-password" } %>
    <%= f.input :nickname,
                required: true,
                autofocus: true,
                input_html: { autocomplete: "nickname", placeholder: "Nickname" } %>
    <%# <%= f.input :description,
                required: true,
                autofocus: true,
                input_html: { autocomplete: "description", placeholder: "Description" } %> 
    <%= f.input :spoken_language,
                required: true,
                autofocus: true,
                input_html: { autocomplete: "spoken_language", placeholder: "The language you're fluent in" } %>
    <%= f.input :learning_language,
                required: true,
                autofocus: true,
                input_html: { autocomplete: "learning_language", placeholder: "The language you want to learn" } %>
  </div>

  <div class="form-actions">
    <%= f.button :submit, "Sign up" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
