<div class="card-body" data-room-search-target="list">
  <ul class="list-unstyled mb-0">
    <% @chatrooms.each do |chatroom| %>
      <li class="p-1 border-bottom" style="border-bottom: 1px solid rgba(255,255,255,.3) !important;">
      <%= link_to chatroom_path(chatroom), class: "d-flex justify-content-between link-light text-decoration-none" do %>
        <div class="d-flex flex-row">
          <%# <img src="https://mdbcdn.b-cdn.net/img/Photos/Avatars/avatar-8.webp" alt="avatar"class="rounded-circle d-flex align-self-center me-3 shadow-1-strong" width="60"> %>
          <div class="pt-1">
            <p class="fw-bold mb-0 text-capitalize" style="font-size: 13px;"><%= chatroom.name %></p>
          </div>
          </div>
          <div class="pt-1 text-center">
            <p class="mt-2 px-2 py-1 rounded-pill bg-white bg-opacity-25 text-capitalize room-info" style="width: 100%; font-size: 9px; margin-bottom: 5px;"><%= chatroom.language %></p>
            <% if chatroom.language_level.present? %>
            <p class="px-2 py-1 rounded-pill bg-white bg-opacity-25 text-capitalize room-info" style="width: 100%; font-size: 9px; margin-bottom: 5px"><%= chatroom.language_level %></p>
            <% end %>
          </div>
      </li>
      <% end %>
    </ul>
  <% end %>
</div>
