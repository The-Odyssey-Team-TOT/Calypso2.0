<div class="card-body" data-room-search-target="list">
  <ul class="list-unstyled mb-0">
    <% @chatrooms.each do |chatroom| %>
      <li class="p-2 border-bottom" style="border-bottom: 1px solid rgba(255,255,255,.3) !important;">
      <%= link_to chatroom_path(chatroom), class: "d-flex justify-content-between link-light text-decoration-none" do %>
        <div class="d-flex flex-row">
          <%# <img src="https://mdbcdn.b-cdn.net/img/Photos/Avatars/avatar-8.webp" alt="avatar"class="rounded-circle d-flex align-self-center me-3 shadow-1-strong" width="60"> %>
          <div class="pt-1">
            <p class="fw-bold mb-0 text-capitalize"><%= chatroom.name %></p>
            <p class="small text-white text-capitalize"><%= chatroom.topic %></p>
          </div>
          </div>
          <div class="pt-1">
            <p class="small text-white mb-1">Just now</p>
          </div>
      </li>
      <% end %>
    </ul>
  <% end %>
</div>
