<section class="gradient-custom">

  <div class="container py-3">

    <div class="row">

      <div class="col mb-4 mb-md-0">
          <div class="card mask-custom">
        <h5 class="mt-3 mb-1 ps-4 pb-3 text-center text-white text-capitalize" style="border-bottom: 1px solid rgba(255,255,255,.3) !important; ">Rooms</h5>
            <%= render 'rooms' %>
          </div>
      </div>



      <div class="col-6">
        <div class="card mask-custom" id="chatroom-title-card">
          <div class="card-mask-custom d-flex justify-content-flex-start p-3"
          style="border-bottom: 1px solid rgba(255,255,255,.3); border-radius: 2em">
            <p class="fs-3 mb-0 pe-4 text-uppercase"><%= @chatroom.name %></p>
            <p class="mb-0 me-3 pt-1 px-3 pt-2 rounded-pill bg-yellow-400 bg-opacity-75 text-capitalize"><%= @chatroom.language %></p>
            <p class="mb-0 me-3 pt-1 px-3 pt-2 rounded-pill bg-purple-500 bg-opacity-75 text-capitalize"><%=@chatroom.topic %></p>
          </div>
        </div>
        <br>
        <ul class="list-unstyled text-white">
          <% @chatroom.messages.each do |message| %>
            <%= render 'messages/message', message: message %>
          <% end %>
        </ul>
            <div>
              <%= form_with(model: [ @chatroom, @chatroom.messages.build ], local: false) do |form| %>
                <div class="form-outline form-white">
                  <%= form.text_field :content, placeholder: "Write a message...", class: "flex-1 px-3 py-2 border border-gray-100 rounded-5" %>
                  <%= form.submit 'Send', class: "btn btn-light btn-lg btn-rounded float-end" %>
                </div>
              <% end %>
            </div>
      </div>

      <div class="col card mask-custom">
        <h5 class="mt-3 mb-1 ps-4 pb-3 text-center text-white text-capitalize" style="border-bottom: 1px solid rgba(255,255,255,.3) !important;"><%= @chatroom.name %>'s Wall</h5>
      </div>

    <div id="wall" class="w-full lg:w-1/4 p-6 bg-gray-800 text-gray-200">
    <div class="title-radius mb-6">
      <h2 class="text-2xl font-semibold"><%= @chatroom.name %>'s Wall</h2>
    </div>
    <% @wall.posts.each do |post| %>
      <div class="post mb-4 p-4 bg-gray-700 rounded-lg shadow-sm">
        <p class="text-gray-300"><%= post.content %></p>
        <%= cl_image_tag post.file.key %>
      </div>
    <% end %>
    <%= simple_form_for [@chatroom, @wall, @post], html: { class: 'bg-gray-900 p-4 rounded-lg shadow-md' } do |form| %>
      <div class="mb-4">
        <%= form.input :content, as: :text, input_html: { class: 'form-input bg-gray-700 text-gray-300 border-gray-600 rounded-lg' }, wrapper_html: { class: 'mb-4' } %>
      </div>
      <%= form.button :submit, 'Post', class: 'btn btn-secondary bg-blue-600 hover:bg-blue-700 text-white py-2 px-4 rounded-lg shadow-md' %>
    <% end %>
  </div>
</div>
</section>
