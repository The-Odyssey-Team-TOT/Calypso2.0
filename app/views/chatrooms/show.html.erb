<div class="chat-show">
  <div class="w-1/4 bg-black p-4">
    <div class="mb-4">
      <input type="text" placeholder="Search for a room" class="bg-black w-full px-3 py-2 rounded-lg focus:outline-none focus:ring focus:ring-blue-200">
    </div>
    <%= render "allrooms" %>
  </div>

  <div class="flex-1 text-white flex flex-col">
    <div class="flex items-center justify-between p-4 bg-black">
      <h1 class="text-2xl font-bold"><%= @chatroom.name %></h1>
    </div>
    <div id="msg-container" class="flex-1 p-4 overflow-y-auto">
      <% @chatroom.messages.each do |message| %>
        <%= render "messages/message", message: message %>
        <% end %>
    </div>
    <div class="p-4 bg-black">
      <%= form_with(model: [ @chatroom, @chatroom.messages.build ], local: true) do |form| %>
        <div class="flex items-center">
          <%= form.text_area :content, placeholder: "Write a message...", class: "flex-1 px-3 py-2 border border-gray-100 rounded-l focus:outline-none  focus:ring-blue-200" %>
          <%= form.submit 'Send', id:"send-btn", class: "h-14 l-4 bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded focus:outline-none focus:shadow-outline" %>
        </div>
      <% end %>
    </div>
  </div>

  <div class="w-1/4 bg-black p-4 border-gray-200">
    <div class="mb-4">
     <p><%= @chatroom.name %>'s Wall<p>
    </div>
     <% @wall.posts.each do |post| %>
        <div class="post">
          <p><%= post.content %></p>
        </div>
      <% end %>
      <%= simple_form_for [@chatroom, @wall, @post] do |form| %>
      <div class="mb-3">
        <%= form.input :content, as: :text %>
      </div>
        <%= form.button :submit, 'Post', class: 'btn btn-secondary' %>
      <% end %>
  </div>
</div>
